<VerticalLayout
    id="scoreBoard"
    height="500"
    width="500"
    color="rgba(0,0,0,0)"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    rectAlignment="MiddleRight"
>
    <Text fontSize="50" color="red">Score Board</Text>
    <Text id="turnScoreUI" fontSize="35" color="white"></Text>
    <Text id="player1score" fontSize="25" color="white"></Text>
    <Text id="player2score" fontSize="25" color="red"></Text>
    <Text id="player3score" fontSize="25" color="yellow"></Text>
    <Text id="player4score" fontSize="25" color="green"></Text>
    <Text id="player5score" fontSize="25" color="blue"></Text>
    <Text id="player6score" fontSize="25" color="pink"></Text>

</VerticalLayout>